{
  "buildCommand": "npm run install-all && npm run build",
  "outputDirectory": "client/dist",
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/api/$1"
    },
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ],
  "env": {
    "STRIPE_SECRET_KEY": "@stripe_secret_key",
    "VITE_STRIPE_PUBLISHABLE_KEY": "@stripe_publishable_key"
  }
}
